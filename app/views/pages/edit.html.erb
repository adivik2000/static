<h1>Edit page</h1>
<% form_for @page do |f| %>
  <%= f.error_messages %>
  <% unless @page.is_home? %>
    <p><%= f.label :title %><br /><%= f.text_field :title %></p>
  <% end %>
  <p><%= f.label :body %><br /><%= f.text_area :body %></p>
  <p><%= f.submit 'Save changes' %> or <%= link_to 'cancel', admin_path %></p>
<% end %>